<%- include('../components/header.ejs') %>
<%- include('../components/user/user.header.ejs') %>
<%- include('../components/navbar.ejs') %>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="container p-1 d-flex align-items-center">
  <div class="row justify-content-center w-100">
    <div class="col-lg-6 col-md-8">

      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-4">

          <!-- Step Indicator -->
          <div class="d-flex justify-content-center align-items-center mb-4 gap-3">
            <span class="rounded-circle bg-primary text-white fw-bold d-flex align-items-center justify-content-center" style="width:35px;height:35px;">1</span>

            <div class="flex-grow-1 border-top"></div>

            <span class="rounded-circle bg-secondary-subtle text-secondary fw-bold d-flex align-items-center justify-content-center" style="width:35px;height:35px;">2</span>

            <div class="flex-grow-1 border-top"></div>

            <span class="rounded-circle bg-secondary-subtle text-secondary fw-bold d-flex align-items-center justify-content-center" style="width:35px;height:35px;">3</span>
          </div>

          <!-- Step 1 -->
          <div id="step1">
            <h5 class="mb-4">Email Verification</h5>

            <div class="mb-4">
              <label class="form-label">Email Address</label>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-envelope"></i>
                </span>
                <input type="email" class="form-control" placeholder="Enter your email">
              </div>
              <div class="form-text">
                We'll send a verification code to this email
              </div>
            </div>

            <button class="btn btn-primary w-100">
              Send Verification Code
            </button>
          </div>

          <!-- Step 2 -->
          <div id="step2" class="d-none">
            <h5 class="mb-3">Enter Verification Code</h5>
            <p class="text-muted mb-4">
              We've sent a verification code to your email.
            </p>

            <div class="d-flex justify-content-center gap-2 mb-4">
              <input class="form-control text-center fs-4" maxlength="1" style="width:50px;">
              <input class="form-control text-center fs-4" maxlength="1" style="width:50px;">
              <input class="form-control text-center fs-4" maxlength="1" style="width:50px;">
              <input class="form-control text-center fs-4" maxlength="1" style="width:50px;">
              <input class="form-control text-center fs-4" maxlength="1" style="width:50px;">
              <input class="form-control text-center fs-4" maxlength="1" style="width:50px;">
            </div>

            <div class="text-center mb-4">
              <span class="text-muted">Didn't receive the code?</span>
              <a href="#" class="text-decoration-none ms-1">Resend</a>
            </div>

            <button class="btn btn-primary w-100">
              Verify Code
            </button>
          </div>

          <!-- Step 3 -->
          <div id="step3" class="d-none">
            <h5 class="mb-4">Create New Password</h5>

            <div class="mb-4">
              <label class="form-label">New Password</label>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" class="form-control">
                <span class="input-group-text">
                  <i class="fas fa-eye"></i>
                </span>
              </div>

              <div class="progress mt-2" style="height:5px;">
                <div class="progress-bar bg-danger" style="width:60%"></div>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label">Confirm Password</label>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-lock"></i>
                </span>
                <input type="password" class="form-control">
                <span class="input-group-text">
                  <i class="fas fa-eye"></i>
                </span>
              </div>
            </div>

            <div class="mb-4">
              <h6>Password Requirements</h6>
              <ul class="list-unstyled small text-muted">
                <li class="text-success">
                  <i class="fas fa-check-circle me-2"></i>At least 8 characters
                </li>
                <li>
                  <i class="fas fa-circle me-2"></i>Uppercase letters
                </li>
                <li>
                  <i class="fas fa-circle me-2"></i>Special characters
                </li>
                <li>
                  <i class="fas fa-circle me-2"></i>Numbers
                </li>
              </ul>
            </div>

            <button class="btn btn-primary w-100">
              Reset Password
            </button>
          </div>

          <!-- Success -->
          <div id="success" class="d-none text-center">
            <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width:80px;height:80px;">
              <i class="fas fa-check fs-3"></i>
            </div>

            <h5>Password Reset Successful!</h5>
            <p class="text-muted mb-4">
              You can now log in with your new password.
            </p>

            <a href="#" class="btn btn-primary">
              Back to Login
            </a>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>

<%- include('../components/user/user.footer.ejs') %>
<%- include('../components/ender.ejs') %>