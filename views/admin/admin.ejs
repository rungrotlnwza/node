<%- include('../components/header/admin.header.ejs') %>
<div class="p-2">
  <div class="row mb-4">
    <div class="col-12 text-center text-md-start">
      <h1 class="fw-bold mb-1">จัดการบทเรียนทั้งหมด</h1>
      <p class="text-light mb-0">จัดการเนื้อหาบทเรียน และหมวดหมู่</p>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="row g-3 justify-content-center">
    <div class="col-12 col-md-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="mb-1 text-muted">บทเรียนทั้งหมด</p>
            <h2 class="fw-bold mb-0" id="total">0</h2>
          </div>
          <div class="fs-1 text-primary"><i class="bi bi-journal-text"></i></div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="mb-1 text-muted">บทเรียนที่พร้อมใช้งาน</p>
            <h2 class="fw-bold text-success mb-0" id="status_open">0</h2>
          </div>
          <div class="fs-1 text-success"><i class="bi bi-check-circle"></i></div>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <p class="mb-1 text-muted">บทเรียนที่ไม่พร้อมใช้งาน</p>
            <h2 class="fw-bold text-danger mb-0" id="status_close">0</h2>
          </div>
          <div class="fs-1 text-danger"><i class="bi bi-x-circle"></i></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Lesson List -->
  <div id="lesson-list" class="row g-3 justify-content-center mt-3"></div>

  <!-- Pagination Controls -->
  <div class="d-flex justify-content-center gap-2 mt-3">
    <button id="prev-page" class="btn btn-outline-primary">Previous</button>
    <span id="current-page" class="align-self-center fw-bold">1</span>
    <button id="next-page" class="btn btn-outline-primary">Next</button>
  </div>

  <template id="lesson-card-template">
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 shadow-sm border-0">
        <div class="card-body d-flex flex-column">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <span class="badge bg-secondary text-uppercase lesson-id"></span>
            <span class="badge bg-primary text-uppercase lesson-category"></span>
            <span class="badge lesson-status"></span>
          </div>
          <h5 class="fw-bold mb-2 lesson-name"></h5>
          <p class="text-muted small mb-3">ระดับ: <span class="fw-semibold lesson-level"></span></p>
          <hr class="my-2">
          <div class="mt-auto">
            <p class="mb-1 small text-muted">สร้างโดย: <span class="fw-semibold text-dark lesson-created-by"></span></p>
            <p class="mb-0 small text-muted lesson-updated-at"></p>
          </div>
          <!-- Actions -->
          <div class="mt-2 d-flex justify-content-between gap-1">
            <a class="btn btn-sm btn-outline-primary w-100 btn-view" href="#">ดู</a>
            <a class="btn btn-sm btn-outline-warning w-100 btn-edit" href="#">แก้ไข</a>
            <button type="button" class="btn btn-sm btn-outline-danger w-100 btn-delete">
              ลบ
            </button>

          </div>
        </div>
      </div>
    </div>
  </template>

</div>
<%- include('../components/footer/admin.footer.ejs') %>

<script>
  if (!getCookie('token')) {
    window.location.href = '/'
  }

  const container = document.getElementById('lesson-list');
  const template = document.getElementById('lesson-card-template');
  const prevBtn = document.getElementById('prev-page');
  const nextBtn = document.getElementById('next-page');
  const currentPageEl = document.getElementById('current-page');

  const limit = 100; // จำนวนบทเรียนต่อหน้า
  let totalPages = 1;

  // อ่านเลขหน้าจาก URL (default = 1)
  let urlParams = new URLSearchParams(window.location.search);
  let currentPage = parseInt(urlParams.get('page')) || 1;

  async function loadLessons(page = 1) {
    try {
      currentPage = page;

      // update URL โดยไม่ reload หน้า
      const newUrl = new URL(window.location.href);
      newUrl.searchParams.set('page', page);
      window.history.replaceState({}, '', newUrl);

      const res = await fetch(`/api/lesson?page=${page}&limit=${limit}`, {
        method: 'GET',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer ' + getCookie('token')
        }
      });
      const data = await res.json();

      // update summary
      document.getElementById('total').innerText = data.summary.total;
      document.getElementById('status_open').innerText = data.summary.status_open;
      document.getElementById('status_close').innerText = data.summary.status_close;

      // calculate pagination
      totalPages = Math.ceil(data.summary.total / limit);
      currentPageEl.innerText = page;

      // render lessons
      container.innerHTML = '';
      data.lessons.forEach(lesson => {
        const clone = template.content.cloneNode(true);

        clone.querySelector('.lesson-id').textContent = lesson.lesson_id;
        clone.querySelector('.lesson-category').textContent = lesson.lesson_category;
        clone.querySelector('.lesson-name').textContent = lesson.lesson_name;
        clone.querySelector('.lesson-level').textContent = lesson.lesson_level;
        clone.querySelector('.lesson-created-by').textContent = lesson.created_by;

        const statusBadge = clone.querySelector('.lesson-status');
        statusBadge.textContent = lesson.status.toUpperCase();
        statusBadge.classList.add(lesson.status === 'open' ? 'bg-success' : 'bg-secondary');

        const date = new Date(lesson.updated_at);
        clone.querySelector('.lesson-updated-at').textContent =
          `อัปเดตล่าสุด: ${date.toLocaleDateString('th-TH', {day: '2-digit', month: 'short', year: 'numeric'})}`;

        clone.querySelector('.btn-view').href = `/eol/lesson?${lesson.lesson_id}`;
        clone.querySelector('.btn-edit').href = `/admin/lesson/edit?${lesson.lesson_id}`;

        // set delete button
        const deleteBtn = clone.querySelector('.btn-delete');
        deleteBtn.onclick = () => delete_lesson(lesson.lesson_id);

        container.appendChild(clone);
      });
    } catch (err) {
      console.error('โหลดบทเรียนล้มเหลว:', err);
    }
  }

  // initial load
  loadLessons(currentPage);

  prevBtn.addEventListener('click', () => {
    if (currentPage > 1) loadLessons(currentPage - 1);
  });

  nextBtn.addEventListener('click', () => {
    if (currentPage < totalPages) loadLessons(currentPage + 1);
  });

  function delete_lesson(id) {
    if (!confirm('คุณต้องการลบบทเรียนนี้หรือไม่')) return;

    fetch(`/api/delete-lesson/${id}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': 'Bearer ' + getCookie('token')
        }
      })
      .then(res => res.json())
      .then(data => {
        console.log('SUCCESS:', data);
        loadLessons(currentPage);
      })
      .catch(err => {
        console.error('ERROR:', err);
      });
  }
</script>