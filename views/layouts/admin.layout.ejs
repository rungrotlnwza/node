<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SlipSure Admin</title>
  <link rel="shortcut icon" href="/assets/image/favicon.ico" type="image/x-icon">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <script src="/assets/js/framework.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/js-beautify/1.14.9/beautify-html.min.js"></script>
  <style>
    .sidebar {
      background-color: #fff;
      border-right: 1px solid #dee2e6;
      height: 100vh;
      position: fixed;
      top: 0;
      left: 0;
      width: 280px;
      transition: all 0.3s ease;
      z-index: 1050;
    }

    /* Mobile Sidebar */
    @media (max-width: 991px) {
      .sidebar {
        left: -280px;
      }

      .sidebar.show {
        left: 0;
      }
    }

    .sidebar .nav-link {
      color: #333;
      font-weight: 500;
      transition: 0.2s;
    }

    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
      color: #28a745;
    }

    .brand-logo {
      font-size: 3.0rem;
      font-weight: bold;
      color: #333;
    }

    .brand-logo span {
      color: #28a745;
    }

    .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.4);
      z-index: 1045;
      display: none;
    }

    .overlay.show {
      display: block;
    }

    .main-content {
      margin-left: 280px;
      transition: all 0.3s ease;
    }

    @media (max-width: 991px) {
      .main-content {
        margin-left: 0;
      }
    }

    .navbar {
      background-color: #fff;
      border-bottom: 1px solid #dee2e6;
      position: sticky;
      top: 0;
      z-index: 1030;
    }
  </style>
</head>

<body class="bg-dark text-white">
  <div id="sidebar" class="sidebar d-flex flex-column justify-content-between">
    <div>
      <button type="button" id="btn-close-sidebar" class="btn-close d-lg-none position-absolute top-0 end-0 m-3" aria-label="Close"></button>

      <div class="text-center my-3">
        <div class="brand-logo">Slip<span>Sure</span></div>
      </div>

      <b class="mx-3 text-dark">หลัก</b>
      <nav class="nav flex-column px-3">
        <a href="/private/admin" class="nav-link active"><i class="bi bi-house me-2"></i>จัดการ lesson</a>
        <a href="/private/addlesson" class="nav-link"><i class="bi bi-wallet2 me-2"></i>เพิ่ม lesson </a>
      </nav>

      <hr class="mx-3 text-dark">
    </div>
  </div>

  <div id="sidebar-overlay" class="overlay"></div>

  <div class="main-content">
    <%- include('../components/navbar/navbar.ejs') %>

    <div class="container-fluid p-4">
      <%- body %>
    </div>

    <button class="btn btn-success rounded-circle position-fixed bottom-0 end-0 m-3 z-3 d-lg-none" id="menu-toggle" style="width: 56px; height: 56px;">
      <i class="bi bi-list fs-4"></i>
    </button>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/script.js"></script>
  <%- (typeof scripts !== 'undefined') ? scripts : '' %>
  <script>
    document.addEventListener('click', (e) => {
      const dismiss = e.target.closest(
        '[data-bs-dismiss="offcanvas"],[data-dismiss="offcanvas"],.offcanvas .btn-close'
      );
      if (dismiss) return closeSidebar();
    });

    document.addEventListener('DOMContentLoaded', function() {
      const menuToggle = document.getElementById('menu-toggle');
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebar-overlay');
      const btnClose = document.getElementById('btn-close-sidebar');

      function toggleSidebar() {
        sidebar.classList.toggle('show');
        overlay.classList.toggle('show');
      }

      if (menuToggle) menuToggle.addEventListener('click', toggleSidebar);
      if (overlay) overlay.addEventListener('click', toggleSidebar);
      if (btnClose) btnClose.addEventListener('click', toggleSidebar);
    });
  </script>
</body>

</html>